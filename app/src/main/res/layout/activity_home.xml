<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_Home"
    android:background="@color/primary_dark">


    <ImageView
        android:id="@+id/home_IMG_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/icn_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:padding="8dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_TXT_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textAlignment="center"
        android:layout_below="@id/home_IMG_user"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        />


    <!--welcome message in text view-->
    <TextView
        android:id="@+id/home_TXT_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:text="Team Us Up \n Welcome to Home Screen"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        />

    <!--Button for logout from the app-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_TXT_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Logout"
        android:textAllCaps="false"
        app:cornerRadius="50dp"/>

</RelativeLayout>

