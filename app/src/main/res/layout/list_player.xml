<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    android:id="@+id/player_MCV_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardElevation="5dp"
    android:backgroundTint="#00BCD4"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"
        >

        <ImageView
            android:id="@+id/player_IMG_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@id/player_IMG_image"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icn_edit" />

        <ImageView
            android:id="@+id/player_IMG_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/player_IMG_edit"
            android:layout_alignStart="@id/player_IMG_edit"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icn_bin"
            />

        <ImageView
            android:id="@+id/player_IMG_level"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@id/player_IMG_edit"
            android:layout_alignBottom="@id/player_LBL_name"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icn_level" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/player_IMG_image"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icn_user" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/player_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_IMG_image"
            android:layout_alignStart="@id/player_IMG_image"
            android:layout_alignEnd="@id/player_IMG_image"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="Ronaldinho"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/player_LBL_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/player_IMG_level"
            android:layout_alignStart="@id/player_IMG_edit"
            android:layout_alignEnd="@id/player_IMG_edit"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Normal"
            android:textSize="6sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/player_LBL_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_IMG_delete"
            android:layout_alignStart="@id/player_IMG_delete"
            android:layout_alignEnd="@id/player_IMG_delete"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="0"
            android:textSize="8sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/player_IMG_counter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/player_LBL_counter"
            android:layout_alignStart="@id/player_IMG_delete"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icn_soccer_ball" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
